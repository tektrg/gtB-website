  <script is:inline>
    // Replace poster with YouTube iframe on click or Enter/Space
    const initLiteYT = () => {
      document.querySelectorAll('.yt-lite').forEach((el) => {
        const id = el.getAttribute('data-yt-id');
        if (!id) return;
        const src = (autoplay = true) => `https://www.youtube-nocookie.com/embed/${id}?rel=0&modestbranding=1&autoplay=${autoplay ? 1 : 0}`;
        const load = () => {
          if (el.dataset.loaded) return;
          el.classList.add('loading');
          const iframe = document.createElement('iframe');
          iframe.src = src(true);
          iframe.title = 'GPT Breeze overview';
          iframe.loading = 'eager';
          iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share';
          iframe.referrerPolicy = 'strict-origin-when-cross-origin';
          iframe.allowFullscreen = true;
          iframe.style.position = 'absolute';
          iframe.style.inset = '0';
          iframe.style.width = '100%';
          iframe.style.height = '100%';
          iframe.style.border = '0';
          el.replaceWith(iframe);
          el.dataset.loaded = '1';
        };
        el.addEventListener('click', load, { once: true });
        el.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            load();
          }
        });
      });
    };
    
    // Mobile menu functionality
    const initMobileMenu = () => {
      const toggle = document.querySelector('.mobile-menu-toggle');
      const overlay = document.querySelector('.mobile-menu-overlay');
      const mobileMenu = document.querySelector('.mobile-menu');
      
      console.log('Mobile menu init:', { toggle, overlay, mobileMenu });
      
      if (!toggle || !overlay || !mobileMenu) {
        console.log('Mobile menu elements not found!');
        return;
      }
      
      const openMenu = () => {
        console.log('Adding active class to overlay');
        overlay.classList.add('active');
        toggle.classList.add('active');
        toggle.setAttribute('aria-expanded', 'true');
        overlay.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
        console.log('After adding active:', overlay.classList.toString());
      };
      
      const closeMenu = () => {
        overlay.classList.remove('active');
        toggle.classList.remove('active');
        toggle.setAttribute('aria-expanded', 'false');
        overlay.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';
      };
      
      // Toggle menu on button click
      toggle.addEventListener('click', (e) => {
        console.log('Mobile menu toggle clicked!');
        e.preventDefault();
        e.stopPropagation();
        console.log('Current overlay classes:', overlay.classList.toString());
        if (overlay.classList.contains('active')) {
          console.log('Closing menu');
          closeMenu();
        } else {
          console.log('Opening menu');
          openMenu();
        }
      });
      
      // Close menu when clicking outside
      overlay.addEventListener('click', (e) => {
        if (e.target === overlay) {
          closeMenu();
        }
      });
      
      // Close menu when clicking on a link
      mobileMenu.addEventListener('click', (e) => {
        if (e.target.tagName === 'A') {
          closeMenu();
        }
      });
      
      // Close menu on escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && overlay.classList.contains('active')) {
          closeMenu();
        }
      });
    };
    
    // Mobile email form handler
    const initMobileEmailForm = () => {
      const form = document.getElementById('mobileEmailForm');
      if (!form) return;

      form.addEventListener('submit', (e) => {
        e.preventDefault();
        const emailInput = document.getElementById('mobileEmail');
        const email = emailInput.value;

        // Track email submission with Google Analytics
        if (window.gtag) {
          window.gtag('event', 'mobile_email_submit', {
            'event_category': 'engagement',
            'event_label': email,
            'value': 1
          });
        }

        // Prepare email content
        const subject = encodeURIComponent('GPT Breeze - Chrome Extension Info');
        const body = encodeURIComponent(
          'Hi there!\\n' +
          '\\n' +
          'Thank you for your interest in GPT Breeze!\\n' +
          '\\n' +
          'GPT Breeze is a powerful Chrome extension that helps you save time with AI summaries, tab management, and one-click shortcuts for YouTube, selected text, and any website.\\n' +
          '\\n' +
          'Install GPT Breeze for Chrome:\\n' +
          'https://chromewebstore.google.com/detail/gpt-breeze-chatgpt-ai-sho/plchckmceefljjjphgfcadhlfnlindog\\n' +
          '\\n' +
          'Key Features:\\n' +
          '• YouTube video summarization\\n' +
          '• Web page analysis\\n' +
          '• AI-powered writing assistance\\n' +
          '• Custom shortcuts\\n' +
          '• Bring your own API key (BYOK)\\n' +
          '• Privacy-focused design\\n' +
          '\\n' +
          'Best regards,\\n' +
          'GPT Breeze Team'
        );

        // Open email app with prefilled content
        window.location.href = `mailto:${email}?subject=${subject}&body=${body}`;

        // Clear the input
        emailInput.value = '';
      });
    };
    
